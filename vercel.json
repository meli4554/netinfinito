{
  "version": 2,
  "builds": [
    {
      "src": "api/serverless.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/uploads/(.*)",
      "dest": "/api/serverless"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|webp|html))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/serverless"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}